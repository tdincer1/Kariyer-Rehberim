<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".AnaEkran">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Teste hoşgeldiniz!"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <Button
        android:id="@+id/button_meslek_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="Meslek Testi" />

    <Button
        android:id="@+id/button_kisilik_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_meslek_start"
        android:layout_centerInParent="true"
        android:layout_marginTop="52dp"
        android:text="Kişilik Testi" />

    <Button
        android:id="@+id/button_tercih_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_kisilik_start"
        android:layout_centerInParent="true"
        android:layout_marginTop="52dp"
        android:text="Tercih Robotu" />

    <Button
        android:id="@+id/button_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_tercih_start"
        android:layout_centerInParent="true"
        android:layout_marginTop="52dp"
        android:text="robot" />


</RelativeLayout>