<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:keepScreenOn="false"
        android:textAlignment="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAlignment="center">

            <LinearLayout
                android:id="@+id/lnr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/uniId"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="universite!"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/konTv"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kontenjan" />

                <TextView
                    android:id="@+id/fakulteId"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/lnr2"
                    android:layout_weight="1"
                    android:text="fakulte!" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnr1"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/bolumId"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/cardview_compat_inset_shadow"
                    android:text="bölüm!" />

                <TextView
                    android:id="@+id/kontenjanId"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="kontSayi!" />

                <TextView
                    android:id="@+id/bolumTuruId"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="!bolumturu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnr2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tabanTv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Taban Puanı" />

                <TextView
                    android:id="@+id/sirTv"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sıralama" />

                <TextView
                    android:id="@+id/prTv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Program Kodu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnr3"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tabanId"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="taban Puani!" />

                <TextView
                    android:id="@+id/siralamaId"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="sıralama!" />

                <TextView
                    android:id="@+id/progKoduId"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="program!" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnr4"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/puanTuruId"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="puan turu!" />

                <TextView
                    android:id="@+id/sehirId"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="!sehir" />

                <TextView
                    android:id="@+id/dilID"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="dil!" />
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>